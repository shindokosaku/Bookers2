<%= render '/books/user-info', user: @user, book: @book %>

<h2>Users</h2>

<table class="table table-striped">
 
<thead>
  <tr>
   <th>image</th>
   <th>name</th>
   <th></th>
  </tr>
 </thead>
 <tbody>
 <% @users.each do |user| %>
  <tr>
   <td> <%= image_tag user.get_profile_image(100, 100) %> </td>
   <td> <%= user.name %></td>
   <td> <%=link_to "show", user_path(user.id) %> </td>
  </tr>
  <% end %>
 </tbody>
</table>
