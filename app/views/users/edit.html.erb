<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true %><br>
  <label for="inputImage">Image</label>
  
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user image" %>  
  
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction ,class:"form-control introduction" %>
  <%= f.submit class:"btn btn-secondary" %>

<% end %>