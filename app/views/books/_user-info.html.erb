<h1>User info</h1>
<% if list.image.attached? %>
<%= image_tag book.image, size: "200x200" %>
<% else %>
<%= image_tag 'no_image', size: "200x200" %>
<% end %>
<table class="table table-striped">
 <tbody>
  <tr>
   <th>name</th>
   <th><%= user.name %></th>
  </tr>
  <tr>
   <th>introduction</th>
   <th><%= user.introduction %></th>
  </tr>
 </tbody>
</table>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>