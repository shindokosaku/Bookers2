<h2>User info</h2>
<%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Image</label>
  <input class ="form-control-file user image" accept="image/*" type="file" name="user[profile_image]" id="user[profile_image]" id="user_profile_image">
  
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  
  <label for="user_introduction">Introduction</label>
  <textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>
  
  <%= f.submit "Update User" %>
<% end %>